#!/usr/bin/env python
import markdown
from flask import Flask
from mdserve import utils
import os

app = Flask(__name__)

# on / serve index.md
@app.route("/")
def index():
    return "Hello World!"

@app.route('/<doc>.html')
def mdfile(doc):
    filename = os.path.join('docs', doc + '.md')
    print "{}".format(filename)
    return utils.convert_md_to_html(filename)

if __name__ == "__main__":
    app.debug = True
    app.run()
